# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/gharinto_platform"

# Session Configuration
SESSION_SECRET="your-super-secret-session-key-min-32-chars-long"

# Application Configuration
PORT=5000
NODE_ENV=development

# Replit OAuth (if using Replit hosting)
REPLIT_CLIENT_ID="your-replit-client-id"
REPLIT_CLIENT_SECRET="your-replit-client-secret"

# Email Configuration (optional)
SENDGRID_API_KEY="your-sendgrid-api-key"

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH="./uploads"

# Twilio Configuration (for CRM integration)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# External CRM APIs (future integration)
LEADPRO_API_KEY="your-leadpro-api-key"
LEADPRO_API_URL="https://api.leadpro.com/v1"
PERFEX_API_KEY="your-perfex-api-key"
PERFEX_API_URL="https://your-perfex.com/api"

# Security Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5000"
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100  # requests per window